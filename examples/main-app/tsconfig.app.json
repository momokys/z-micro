{
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.vue", "**/*.tsx", "**/*.ts", "**/package.json"]
}
